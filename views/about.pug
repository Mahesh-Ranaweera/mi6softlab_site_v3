        .app-section
            .charts#graph1
            .charts_desc
                | HTML, Pug & CSS
            .charts#graph2
            .charts_desc
                | Adobe Creative Cloud
            .charts#graph3
            .charts_desc
                | Javascript
            .charts#graph4
            .charts_desc
                | SQL
            .charts#graph5
            .charts_desc
                | NodeJS & Express
            .charts#graph6
            .charts_desc
                | PHP
            .charts#graph7
            .charts_desc
                | Python
            .charts#graph8
            .charts_desc
