                    b Typed.js (JavaScript Typing Animation Library)

                
    include socialbar.pug

    script(src='/js/progressbar.js')
    script.
        function rights(){
            var curr = new Date();
            var year = curr.getFullYear();
            document.getElementById('app-rights').innerHTML = '&copy;'+year+' Mahesh-Ranaweera';
        }

        window.onload = function(){
            rights();
        }

        var graph_list = [graph1, graph2, graph3, graph4, graph5, graph6, graph7, graph8];
        var perce_list = [1.0, 1.0, 1.0, 1.0, 0.75, 0.75, 0.75,  0.6];

        for(var i = 0; i < 8; i++){
            //console.log(graph_list[i], perce_list[i]);
            var bar = new ProgressBar.Line(graph_list[i], {
                strokeWidth: 4,
                easing: 'easeInOut',
                duration: 1400,
                color: '#0D8AEE',
                trailColor: '#EEE',
                trailWidth: 4,
                svgStyle: {width: '100%', height: '100%'}
            });

            bar.animate(perce_list[i]);
        }